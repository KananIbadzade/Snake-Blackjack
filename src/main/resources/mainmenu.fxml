<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>


<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.snakeblackjack.MainMenuController"
      spacing="20" alignment="CENTER"
      prefWidth="300" prefHeight="400">

    <Label fx:id="welcomeLabel" text="Welcome," />
    <Label fx:id="snakeScoreLabel" text="Snake High Score: " />
    <Label fx:id="blackjackScoreLabel" text="Blackjack High Score: " />

    <Button text="Play Snake"     onAction="#launchSnake"/>
    <Button text="Play Blackjack" onAction="#launchBlackjack"/>

    <Label fx:id="topScoresLabel" layoutX="20" layoutY="250" text="Top 5 Snake Scores:" />
    <TextArea fx:id="topScoresArea"
              editable="false"
              prefRowCount="6"
              wrapText="true"
              prefHeight="150.0"
              prefWidth="300.0"
              VBox.vgrow="NEVER" />
</VBox>



